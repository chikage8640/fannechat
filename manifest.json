{

  "manifest_version": 2,
  "name": "fannechat",
  "version": "0.0",

  "description": "Connect fans of different languages through chat.",

  "icons": {
    "48": "icons/icon48.png",
    "96": "icons/icon96.png"
  },

  "options_ui": {
    "page": "options.html"
  },

  "page_action": {
    "browser_style": true,
    "default_icon": {
      "19": "icons/icon19.png",
      "38": "icons/icon38.png"
    },
    "default_title": "Translate",
    "default_popup": "popup.html",
    "show_matches": ["*://*.youtube.com/live_chat*"]
  },

  "applications": {
    "gecko": {
      "id": "fannechat@chikage.net"
    }
  },

    
  "permissions":[
    "*://*/*",
    "storage"
  ]


}